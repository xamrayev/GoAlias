{
  "manifest_version": 3,
  "name": "AI Shortlinker",
  "version": "1.0",
  "description": "Умный поиск закладок с AI-поддержкой",
  
  "permissions": [
    "bookmarks",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Shortlinker"
  },
  
  "omnibox": {
    "keyword": "sl"
  },
  
  
  "web_accessible_resources": [
    {
      "resources": ["manage.html"],
      "matches": ["<all_urls>"]
    }
  ]
}