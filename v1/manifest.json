{
  "manifest_version": 3,
  "name": "AI Shortlinker",
  "version": "1.0",
  "description": "Create smart shortlinks with AI-powered alias generation and search",
  "permissions": [
    "storage", 
    "tabs", 
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Shortlinker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": { 
    "keyword": "go"
  },
  "trial_tokens": [
    "YOUR_ORIGIN_TRIAL_TOKEN_HERE"
  ]
}